from math import cos


def cosApprox(x,h):
	return (cos(x+h) - 2 * cos(x) + cos(x-h)) / (h ** 2)

h = [1,.5]
count = 1
while count != 17:
	h.append(1 / 10 ** count)
	count += 1

for a in h:
	approx = cosApprox(2,a)
	true = -cos(2)
	diff = abs(true - approx)
	print(f"True={true} h={a} approx={approx}, diff={diff}")

